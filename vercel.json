{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "installCommand": "npm install --include=optional",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        }
    ],
    "functions": {
        "api/index.ts": {
            "includeFiles": "server/**",
            "memory": 1024,
            "maxDuration": 30
        }
    }
}