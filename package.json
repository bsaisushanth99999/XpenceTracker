{
    "name": "expense-tracker-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "build": "npm run build --workspace=client && mkdir -p dist && rm -rf dist/* && cp -r client/dist/* dist/",
        "postinstall": "echo 'Workspaces installed'"
    },
    "dependencies": {
        "typescript": "^5.7.0",
        "tsx": "^4.19.0"
    },
    "optionalDependencies": {
        "@libsql/linux-x64-gnu": "^0.5.22"
    }
}